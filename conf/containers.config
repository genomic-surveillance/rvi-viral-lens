params {
    // sets where to find the containers 
    containers_dir = "$projectDir/containers/"
    // toggle container usage
    use_local_containers = false
    use_registry_containers = true
}

process {
    if (use_local_containers){
        // default container
        container = "${params.containers_dir}/base_container.sif"

        withLabel: ivar {
            container = "${params.containers_dir}/ivar.sif"
        }

        withLabel: kraken {
            container = "${params.containers_dir}/kraken.sif"
        }

        withLabel: pangolin {
            container = "${params.containers_dir}/pangolin.sif"
        }

        withLabel: kraken2ref {
            container = "${params.containers_dir}/kraken2ref.sif"
        }

        withLabel: qc {
            container = "${params.containers_dir}/qc.sif"
        }
    }

    if (use_registry_containers){
        // default container
        container = "quay.io/gsu-pipelines/rvi-vp-basecontainer"

        withLabel: ivar {
            container = "quay.io/gsu-pipelines/rvi-vp-ivar"
        }

        withLabel: kraken {
            container = "quay.io/gsu-pipelines/rvi-vp-kraken2"
        }

        withLabel: pangolin {
            container = "quay.io/gsu-pipelines/rvi-vp-pangolin"
        }

        withLabel: kraken2ref {
            container = "quay.io/gsu-pipelines/rvi-vp-kraken2ref"
        }

        withLabel: qc {
            container = "quay.io/gsu-pipelines/rvi-vp-qc"
        }
    }
}

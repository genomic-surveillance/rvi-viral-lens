/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

params {
    meta = [id:"test"]
    //there currently doesn't to be a good way to specify the containers dir on the
    //command line, so will have to stay on here for now
    containers_dir = "/lustre/scratch126/gsu/malariagen/production/containers/viral_pipeline/develop/"
    db_path = "${projectDir}/tests/test_data/test_kraken_databases/minimal"
}

process {
    // default container
    container = "${params.containers_dir}/base_container.sif"

    withLabel: ivar {
        container = "${params.containers_dir}/ivar.sif"
    }

    withLabel: kraken {
        container = "${params.containers_dir}/kraken.sif"
    }

    withLabel: pangolin {
        container = "${params.containers_dir}/pangolin.sif"
    }

    withLabel: kraken2ref {
        container = "${params.containers_dir}/kraken2ref.sif"
    }
}
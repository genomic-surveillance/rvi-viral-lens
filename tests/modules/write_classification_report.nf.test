nextflow_process {

    name "Test Process write_classification_report"
    script "modules/write_classification_report.nf"
    process "write_classification_report_csv"

    test("Should run without failures") {

        when {
            process {
                """
                // define inputs of the process here. Example:
                input[0] = "Col1,Col2,Col3,Col4,Col5,Col6,Col7,Col8"
                input[1] = [
                    "test,2222222,SARSCov2,BA.2,90,200,'',null,Hey\\n",
                    "test2,2222221,SARSCov2,BA.1,80,500,7.0,null\\n"
                ]
                input[2] = "classification_report"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}

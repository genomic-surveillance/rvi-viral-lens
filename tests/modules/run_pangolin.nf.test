                ]
                test_loc="${projectDir}/tests/test_data"
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = tuple(
                    params.meta,
                    "${params.test_loc}/test_consensuses/test2_sarscov2.fa"
                )
                """
